<!DOCTYPE html>
<html>
	<head>
		<title>Enduro login form</title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="stylesheet" href="/admin/assets/css/main.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
		<link href='https://fonts.googleapis.com/css?family=Lato:400,300,100' rel='stylesheet' type='text/css'>

		<script type="text/javascript">
			window.onload = function(){
				var text_input = document.getElementById('pswrdinput');
				text_input.focus();
				text_input.select();
			}
		</script>

	</head>
	<body>

		<div class="blur-background"></div>
		<div class="card login-card">
			<img class="login-logo" src="/admin/assets/img/logo.png">
			<div class="card-body">

				<div>
					<h2>Access restricted</h2>
					<div class="wedge-2x"></div>
				</div>

				<form class="login_form" method="GET" action=''>
					<div class="form-row">
						<label class="login-textfield-label">
							<input id="pswrdinput" class="passphrase_input" type="password" name="pswrd" placeholder="passphrase">
							<span>Passphrase</span>
						</label>
					</div>
					<div class="form-row">
						<div class="wedge-2x"></div>
						<button class="passphrase_button" type="submit">Submit</button>
					</div>
					<div class="clearfix"></div>
				</form>
			</div>
		</div>

	</body>
</html>